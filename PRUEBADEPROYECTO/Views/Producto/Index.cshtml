@{
    @model IEnumerable<Producto>
    ViewData["Title"] = "Producto Page"; }



<h1>Lista de producto</h1>
<a href="@Url.Action("Agregar")"> Agregar</a>

    <hr />

    <div class="container">

        @foreach (var item in Model)
        {
            <div class="row">

                <div class=" col-lg-4">

                    <div class="panel panel-default">
                        <div class="panel-heading">@item.Nombre</div>
                        <div class="panel-body">

                            <img class="img-responsive" src="@item.Imagen" />


                            <p>@item.Descripcion</p>
                            <p> @item.Precio</p>


                        </div>
                    </div>
                </div>


            </div>


        }


    </div>
